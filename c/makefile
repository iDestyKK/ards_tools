CC = gcc
CFLAGS = -g

# Directories
BIN = bin
OBJ = obj
LIB = lib
SRC = src

all: $(BIN)/game_analyser

# -----------------------------------------------------------------------------
# Executables                                                              {{{1
# -----------------------------------------------------------------------------

$(BIN)/game_analyser: $(OBJ)/game_analyser.o
	$(CC) $(CFLAGS) -o $@ $^

# -----------------------------------------------------------------------------
# Object Files                                                             {{{1
# -----------------------------------------------------------------------------

$(OBJ)/game_analyser.o: $(SRC)/game_analyser.c
	$(CC) $(CFLAGS) -o $@ -c $<

# -----------------------------------------------------------------------------
# Library Files                                                            {{{1
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Extras                                                                   {{{1
# -----------------------------------------------------------------------------

clean:
	$(RM) $(BIN)/* $(OBJ)/*
